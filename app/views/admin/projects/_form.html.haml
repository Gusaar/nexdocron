.group
  = f.label :start_date, t("activerecord.attributes.project.start_date", :default => "Start date"), :class => :label
  = f.datetime_select :start_date, :class => 'datetime_select'
  %span.description Ex: a simple text
.group
  = f.label :end_date, t("activerecord.attributes.project.end_date", :default => "End date"), :class => :label
  = f.datetime_select :end_date, :class => 'datetime_select'
  %span.description Ex: a simple text
.group
  = f.label :name, t("activerecord.attributes.project.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :total_hours, t("activerecord.attributes.project.total_hours", :default => "Total hours"), :class => :label
  = f.text_field :total_hours, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :client_id, t("activerecord.attributes.project.client_id", :default => "Client"), :class => :label
  = f.select :client_id, options_from_collection_for_select(@clients, :id, :name), :class => 'select'
.group
  = f.label :invoicing_type_id, t("activerecord.attributes.project.invoicing_type_id", :default => "Invoicing type"), :class => :label
  = f.select :invoicing_type_id, options_from_collection_for_select(@invoicing_types, :id, :name), :class => 'select'
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_projects_path, :class => "text_button_padding link_button"
